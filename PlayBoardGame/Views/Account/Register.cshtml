@model RegisterViewModel
@{
    ViewBag.Title = "Registration";
}
<form method="post" asp-controller="Account" asp-action="RegisterAsync" class="form-container" novalidate>
    <h1>Let's play board games</h1>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <div class="custom-danger">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <div class="custom-danger">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input asp-for="Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="TimeZone">Time zone</label>
        <div class="custom-danger">
            <span asp-validation-for="TimeZone" class="text-danger"></span>
        </div>
        <select asp-for="TimeZone" asp-items="@(new SelectList(Model.TimeZoneList, "Value", "Value"))" class="form-control">
        </select>
    </div>
    <div class="text-left">
        <button class="btn btn-info btn-block" type="submit">Register</button>
        <div class="beforeLoginLinks">Already have an account? <a asp-action="Login">Log In</a></div>
    </div>
</form>
<script>
    let timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;
    document.getElementById("TimeZone").value = timeZone;
</script>