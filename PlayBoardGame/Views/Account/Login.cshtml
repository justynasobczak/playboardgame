@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<form asp-action="LoginAsync" method="post" class="form-container">
    <h1>Let's play board games</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success beforeLoginAlert">
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }
    <div class="form-group">
        <label asp-for="Email"></label>
        <div class="custom-danger"><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div class="custom-danger"><span asp-validation-for="Password" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <button class="btn btn-info btn-block" type="submit">Log In</button>
    <div class="beforeLoginLinks">Forgotten Password? <a asp-action="SendResetPasswordLink">Reset password</a></div>
    <div class="beforeLoginLinks">Don't have an account? <a asp-action="Register">Register</a></div>
</form>