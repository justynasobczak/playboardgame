@model GamesListViewModel
@{
    ViewBag.Title = "Games";
}

<form asp-action="List" class="form-inline plainText mb-3" method="get">
    <label class="mr-sm-2 mb-0">Find by title:</label>
    <input type="text" class="form-control mr-sm-2 mb-2 mb-sm-0" name="SearchString" value="@ViewData["currentFilter"]"/>
    <input value="Search" type="submit" class="btn btn-info mt-2 mt-sm-0"/>
    <a asp-action="List" class="ml-1">Back to Full List</a>
</form>

<table class="table table-hover">
    <tr>
        <th class="text-left plainText">
            <a asp-action="List" asp-route-sortOrder="@ViewData["TitleSortParm"]">Title</a>
        </th>
        <th class="text-left">Photo</th>
        <th class="text-left">Action</th>
    </tr>

    @if (!Model.Games.Any())
    {
        <tr>
            <td colspan="3" class="text-center">No games</td>
        </tr>
    }
    else
    {
        foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Title</td>
                <td>
                    @if (game.PhotoPath != null)
                    {
                        var photoPath = $"~/gamephotos/{game.PhotoPath}";
                        <img src="@photoPath" alt="no image" asp-append-version="true" class="imageGame"/>
                    }
                    else
                    {
                        <img src="/lib/custom/img/noImageAlien.jpg" alt="no image" asp-append-version="true" class="imageGame"/>
                    }
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-success" asp-route-id="@game.GameId">Edit</a>
                        <input type="hidden" name="id" value="@game.GameId"/>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<div class="text-left">
    <a asp-action="Create" class="btn btn-info">Add Game</a>
</div>