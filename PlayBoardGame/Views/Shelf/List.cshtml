@model ShelfListViewModel
@{
    ViewBag.Title = "My shelf";
}
<form asp-action="Delete" method="post">
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Edit" class="btn btn-info">Edit My shelf</a>
    </div>
    <div class="row">
        @foreach (var game in Model.Shelf)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    @if (game.PhotoPath != null)
                    {
                        var photoPath = $"~/gamephotos/{game.PhotoPath}";
                        <img src="@photoPath" alt="no image" asp-append-version="true" class="imageShelf"/>
                        <div class="caption">
                            <p>
                                @game.Title
                                <span>
                                    <input type="checkbox" name="IdsToDelete" value="@game.GameId"/>
                                </span>
                            </p>
                        </div>
                    }
                    else
                    {
                        <img src="/lib/custom/img/noImageAlien.jpg" alt="no image" asp-append-version="true" class="imageShelf"/>
                        <div class="caption">
                            <p>
                                @game.Title
                                <span>
                                    <input type="checkbox" name="IdsToDelete" value="@game.GameId"/>
                                </span>
                            </p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</form>