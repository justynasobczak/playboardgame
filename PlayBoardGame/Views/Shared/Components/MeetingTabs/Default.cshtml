@model MeetingTabsViewModel

<div class="tabs">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="@("nav-link " + (Model.IsCreateMode ? "disabled " : "") + (Model.SelectedTab == MeetingTabName.Details ? "active" : "tab-links"))" 
               asp-controller="Meeting" asp-action="Edit" asp-route-id="@Model.MeetingId"> Details </a>
        </li>
        <li class="nav-item">
            <a class="@("nav-link " + (Model.IsCreateMode ? "disabled " : "") + (Model.SelectedTab == MeetingTabName.Users ? "active" : "tab-links"))" 
               asp-controller="InvitedUser" asp-action="List" asp-route-id="@Model.MeetingId"> Users </a>
        </li>
        <li class="nav-item">
            <a class="@("nav-link " + (Model.IsCreateMode ? "disabled " : "") + (Model.SelectedTab == MeetingTabName.Messages ? "active" : "tab-links"))" 
               asp-controller="Message" asp-action="List" asp-route-id="@Model.MeetingId"> Messages </a>
        </li>
    </ul>
</div>