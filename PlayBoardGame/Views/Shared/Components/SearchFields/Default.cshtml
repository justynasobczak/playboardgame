@model SearchFieldsViewModel

<label class="mr-sm-2 mb-0">Search:</label>
<input type="text" class="form-control mb-2 mb-sm-0" name="SearchString" value="@ViewData["currentFilter"]"/>
<button class="buttonForIcons mr-4">
    <i class="fas fa-search icons"></i>
</button>
<div class="standardLink">
    <i class="fas fa-backspace icons"></i>
    <a asp-action="@Model.ActionMethod">Back to Full List</a>
</div>