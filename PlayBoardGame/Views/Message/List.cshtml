@model MessagesListViewModel
@{
    ViewBag.Title = "Messages";
}
<table class="table table-sm table-bordered">
    <tr>
        <th class="text-left">Text</th>

        <th class="text-left">Author</th>

        <th class="text-left">Created</th>
    </tr>

    @if (Model.Messages.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">No messages</td>
        </tr>
    }
    else
    {
        foreach (var message in Model.Messages)
        {
            <tr>
                <td>@message.Text</td>

                <td>@message.Author.UserName</td>

                <td>@message.Created</td>
            </tr>
        }
    }
</table>

<form class="form-inline" asp-action="Create" method="post">
    <div class="form-group mx-sm-3 mb-2">
        <input asp-for="Text" class="form-control" placeholder="Type message">
    </div>
    <button type="submit" class="btn btn-info mb-2">Send</button>
</form>