@model MessagesListViewModel
@{
    ViewBag.Title = "Messages";
}
<table class="table table-sm table-bordered">
    <tr>
        <th class="text-left">Text</th>

        <th class="text-left">Author</th>

        <th class="text-left">Created</th>

        <th class="text-left">Action</th>
    </tr>

    @if (Model.Messages.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No messages</td>
        </tr>
    }
    else
    {
        foreach (var message in Model.Messages)
        {
            <tr>
                <td>@message.Text</td>

                <td>@message.Author.UserName</td>

                <td>@message.Created</td>

                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@message.MessageId"/>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a href="#" class="btn btn-primary btn-sm" onclick="ShowMessage(@message.MessageId)">Edit</a>
                </td>
            </tr>
        }
    }
</table>

<form class="form-inline" asp-action="Create" method="post">
    <div class="form-group mx-sm-3 mb-2">
        <input asp-for="Text" class="form-control" placeholder="Type message">
    </div>
    <button type="submit" class="btn btn-info mb-2">Send</button>
</form>

<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalTitle">Edit message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="messageModalBody">


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="reset" value="Submit" class="btn btn-primary" id="btnSubmit" onclick="EditMessage()"/>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

<script>
    let ShowMessage = function(id) {
        $.ajax({
            type: "POST",
            url: "/Message/ShowMessage",
            data: { id: id },
            success: function(response) {
                $("#messageModalBody").html(response);
                $("#messageModal").modal("show");
            }

        })
    }

    let EditMessage = function() {
        $(document).ready(function() {
            const message = $("#messageForm").serialize();

            $.ajax({
                    type: "POST",
                    url: "/Message/Edit",
                    data: message,
                    success: function() {
                        $("#messageModal").modal("hide");
                        location.reload();
                    }
                }
            )
        })
    }
</script>